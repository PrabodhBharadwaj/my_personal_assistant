{
  "name": "personal-assistant-backend",
  "version": "1.0.0",
  "description": "Secure backend proxy for Personal Assistant OpenAI API calls",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/server.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only -r dotenv/config src/server.ts dotenv_config_path=.env.server --inspect",
    "dev:bg": "./scripts/process-manager.sh start",
    "start:bg": "./scripts/process-manager.sh start:prod",
    "stop": "./scripts/process-manager.sh stop",
    "restart": "./scripts/process-manager.sh restart",
    "restart:prod": "./scripts/process-manager.sh restart:prod",
    "status": "./scripts/process-manager.sh status",
    "logs": "./scripts/process-manager.sh logs",
    "logs:tail": "./scripts/process-manager.sh logs:tail",
    "logs:clear": "./scripts/process-manager.sh clear-logs",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "personal-assistant",
    "openai",
    "proxy",
    "backend"
  ],
  "author": "Prabodh Bharadwaj",
  "license": "MIT"
}
